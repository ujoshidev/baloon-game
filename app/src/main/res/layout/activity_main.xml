<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.utkarsh.baloon_game.MainActivity">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        >
        
        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:contentDescription="@string/popping_pin"
            android:src="@drawable/pin"
            android:id="@+id/pin1"
            android:tint="@color/pinColor"
            />

        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:contentDescription="@string/popping_pin"
            android:src="@drawable/pin"
            android:id="@+id/pin2"
            android:tint="@color/pinColor"
            />
        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:contentDescription="@string/popping_pin"
            android:src="@drawable/pin"
            android:id="@+id/pin3"
            android:tint="@color/pinColor"
            />
        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:contentDescription="@string/popping_pin"
            android:src="@drawable/pin"
            android:id="@+id/pin4"
            android:tint="@color/pinColor"
            />
        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:contentDescription="@string/popping_pin"
            android:src="@drawable/pin"
            android:id="@+id/pin5"
            android:tint="@color/pinColor"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/LightGrey">
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/play_game"
            android:onClick="startGame"
            />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level_lable"
                android:text="@string/level_lable"
                android:textSize="@dimen/status_text_size"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap"
                />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/level_display"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="@string/max_num"
                android:textSize="@dimen/status_text_size"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score_lable"
                android:text="@string/score_lable"
                android:textSize="@dimen/status_text_size"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap"
                />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/score_display"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="@string/max_num"
                android:textSize="@dimen/status_text_size"
                android:textStyle="bold"
                />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
